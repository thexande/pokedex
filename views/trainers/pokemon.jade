extends ../layout
block content
  h1 #{pokemon[0].trainer_name}'s Pokemon
  table.striped
    thead
      each val, index in pokemon[0]
        th= index
      th Edit
    tbody
      each poke in pokemon
        h1 #{poke[1]}
        tr
          each val2, index2 in pokemon[0]
            td= poke[index2]
          td
            a.btn.waves-effect.waves-light(href="/pokemon/#{poke.id}/edit") edit